    <style name="myRatingBar" parent="android:Widget.Holo.RatingBar.Small">
        <item name="android:numStars">5</item>
        <item name="android:progressDrawable">@drawable/selector_ratingbar</item>

    </style>
    <!--分割线-->
    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:background">@color/lineColor</item>
    </style>
    <style name="card_item_unitprice">
