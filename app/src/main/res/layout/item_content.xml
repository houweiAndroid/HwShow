<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="5dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/one_price_now"
            style="@style/card_item_unitprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="￥100" />

        <TextView
            android:id="@+id/one_price_past"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/one_price_now"
            android:text="￥100"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/one_selled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="0dp"
            android:text="已售1999份"
            android:textColor="#AAAAAA"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/one_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/one_selled"
            android:layout_toRightOf="@id/one_price_past"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="超级鸡排折扣卡"
            android:textColor="#717171"
            android:textSize="14sp" />




    </RelativeLayout>

    <View
        android:id="@+id/line_six"
        style="@style/line" />





</LinearLayout>
