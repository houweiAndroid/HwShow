<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/showNumLayout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/show_money_height"
        android:background="@color/syt_bg_color"
        android:gravity="bottom"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/moneyView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:text="300.00"
            android:textColor="#fff"
            android:textSize="@dimen/title_height"
            android:visibility="gone" />

        <ScrollView
            android:id="@+id/scrollLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fadingEdge="none"
            android:gravity="right"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/contentLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <com.example.houwei.hwshop.widget.MoneyTextView
                        android:id="@+id/showMoneyView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/title_height" />
                </FrameLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/payInfoLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/comm_padding_left20"
            android:paddingRight="@dimen/comm_padding_left20"
            android:visibility="gone" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/comm_padding_left20" >

                    <TextView
                        android:id="@+id/xfjeItemText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_xfje1"
                        android:textColor="@color/white_bg"
                        android:textSize="@dimen/item_title_size"
                        android:typeface="normal" />

                    <HorizontalScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/trade_item_gap"
                        android:fadingEdge="none"
                        android:scrollbars="none" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/xfjeValueText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:lineSpacingExtra="0dp"
                                android:maxLines="1"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="123456"
                                android:textColor="@color/white_bg"
                                android:textSize="@dimen/item_content_size"
                                android:typeface="normal" />
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

                <View
                    android:id="@+id/lineView"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/qian_line_color" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/comm_padding_left20" >

                    <TextView
                        android:id="@+id/yfjeItemText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_yhje1"
                        android:textColor="@color/white_bg"
                        android:textSize="@dimen/item_title_size"
                        android:typeface="normal" />

                    <HorizontalScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/trade_item_gap"
                        android:fadingEdge="none"
                        android:scrollbars="none" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/yfjeValueText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:lineSpacingExtra="0dp"
                                android:maxLines="1"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="123456"
                                android:textColor="@color/white_bg"
                                android:textSize="@dimen/item_content_size"
                                android:typeface="normal" />
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

                <View
                    android:id="@+id/lineView2"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/qian_line_color" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/comm_padding_left20" >

                    <TextView
                        android:id="@+id/realAmtItemText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_yfje1"
                        android:textColor="@color/white_bg"
                        android:textSize="@dimen/item_title_size"
                        android:typeface="normal" />

                    <HorizontalScrollView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/trade_item_gap"
                        android:layout_weight="1.0"
                        android:fadingEdge="none"
                        android:scrollbars="none" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/realAmtValueText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:lineSpacingExtra="0dp"
                                android:maxLines="1"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="123456"
                                android:textColor="@color/main_color"
                                android:textSize="@dimen/item_content_size"
                                android:typeface="normal" />
                        </LinearLayout>
                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/changeClearAmt"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                    
                        android:text="@string/change_amt_clear_zero"
                        android:gravity="center"
                        android:textColor="@drawable/txt_change_amt_color"
                        android:textSize="@dimen/item_title_size"
                        android:typeface="normal" />
                </LinearLayout>

                <View
                    android:id="@+id/lineView3"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/qian_line_color" />
            </RelativeLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/mListView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            android:dividerHeight="0dp"
            android:fadingEdge="none"
            android:listSelector="#00000000"
            android:paddingLeft="@dimen/comm_padding_left"
            android:paddingRight="@dimen/comm_padding_left"
            android:visibility="gone" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <include
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/queding"
            layout="@layout/keyboard_cash" />

        <FrameLayout
            android:id="@+id/mContentLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </FrameLayout>
    </FrameLayout>

</LinearLayout>